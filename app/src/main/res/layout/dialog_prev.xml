<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/lotto_dynamic_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:orientation="horizontal"
        app:columnCount="8"
        app:rowCount="1">

        <TextView
            android:id="@+id/prev_dialog_1"
            android:text="1"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/prev_dialog_2"
            android:text="2"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/prev_dialog_3"
            android:text="3"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/prev_dialog_4"
            android:text="4"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/prev_dialog_5"
            android:text="5"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/prev_dialog_6"
            android:text="6"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center_vertical|center"
            android:layout_margin="2dp"
            android:text="+" />

        <TextView
            android:id="@+id/prev_dialog_7"
            android:text="7"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_ball"
            android:gravity="center_vertical|center"
            android:textColor="@color/white"
            android:layout_margin="2dp"
            android:textStyle="bold" />


    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev_lotto_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="확인" />

        <Button
            android:id="@+id/prev_lotto_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="취소" />
    </LinearLayout>
</LinearLayout>